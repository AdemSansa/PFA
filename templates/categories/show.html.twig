{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
    <h1>Categories</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ category.libelle }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ category.slug }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ category.description }}</td>
            </tr>
        </tbody>
    </table>

   
<div class='d-flex justify-content-end'>
  <a  href="{{ path('app_categories_index') }}"><button class="btn btn-lg btn-primary " type="button">back to list</button></a>
  
</div>
<div class='d-flex justify-content ' style='margin-top:-5%;'>
    <a  href="{{ path('app_categories_edit', {'id': category.id}) }}"><button type="button" class="btn btn-outline-info">edit</button></a>
    <div style="width: 1cm;"></div>{{ include('categories/_delete_form.html.twig') }}

</div>
    
{% endblock %}
