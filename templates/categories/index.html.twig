{% extends 'base.html.twig' %}

{% block title %}Categories index{% endblock %}

{% block body %}
    <h1>Categories index</h1><div class="d-flex justify-content-end mb-3"><a href="{{ path('app_categories_new') }}"><button type="button" class="btn btn-primary btn-lg">Creer Un Nouveau Categorie</button></a></div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>Slug</th>
                <th>Description</th>
                <th colspan='3'>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.libelle }}</td>
                <td>{{ category.slug }}</td>
                <td>{{ category.description }}</td>
                <td><a href="{{ path('app_categories_show', {'id': category.id}) }}"><button  type="button" class="btn btn-outline-primary">Voir Detail</button></a> </td>
                   <td>  <a href="{{ path('app_categories_edit', {'id': category.id}) }}"><button  type="button" class="btn btn-outline-info">Edit</button></a></td>
                    <td> {{ include('categories/_delete_form.html.twig') }}</td>
               
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
