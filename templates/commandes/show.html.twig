{% extends 'base.html.twig' %}

{% block title %}Commandes{% endblock %}

{% block body %}
    <h1>Commandes</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ commande.id }}</td>
            </tr>
            <tr>
                <th>ID_client</th>
                <td>{{ commande.IDClient }}</td>
            </tr>
            <tr>
                <th>Date_CommandeAt</th>
                <td>{{ commande.DateCommandeAt ? commande.DateCommandeAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DetailCommande</th>
                <td>{{ commande.detailCommande ? commande.detailCommande|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>Total</th>
                <td>{{ commande.total }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ commande.Status }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_commandes_index') }}">back to list</a>

    <a href="{{ path('app_commandes_edit', {'id': commande.id}) }}">edit</a>

    {{ include('commandes/_delete_form.html.twig') }}
{% endblock %}
