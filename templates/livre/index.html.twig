
{% extends "base.html.twig" %}
{% block body %}
<h1>Liste des livres</h1>
<div class="d-flex justify-content-end mb-3">
<a href='{{url('app_livre_create')}}' <button type="button" class="btn btn-primary btn-lg">Ajouter un nouveau Livre</button></a>
</div>
<table  class="table">
  <thead class="thead-dark">
    <tr>
      <th>Titre</th>
      <th>ESBN</th>
      <th>Editeur</th>
      <th>Date</th>
      <th>prix</th>
      <th>Categorie</th>
      <th colspan='3'>Action</th>
      
    
    
    </tr>
  </thead>
  <tbody>

    
{% for item in livres %}
<tr>
    <td>{{item.titre}}</td>
    <td>{{item.ISBN}}</td>
    <td>{{item.editeur}}</td>
    <td>{{item.EditedAt|date('d-m-Y')}}</td>
    <td>{{item.prix}}</td>
    <td>{{item.categorie.libelle}}</td>
    <td><a href='{{url('app_livre_detail',{'id':item.id})}}' <button  type="button" class="btn btn-outline-primary">Voir Detail</button></a></td>
    <td><a href='{{url('app_livre_edit',{'id':item.id})}}'><button type="button" class="btn btn-outline-info">Editer</button></td></a>
    <td><a href ="{{url('app_livre_delete',{'id':item.id})}}"<button type="button" class="btn btn-outline-danger">Supprimer</button></a></td>
</tr>
{% endfor %}
<tbody>
</table>{% endblock %}